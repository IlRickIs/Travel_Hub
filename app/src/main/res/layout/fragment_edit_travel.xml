<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/editFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.travels.EditTravelFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/title_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/title_form_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#546E7A"
                app:helperTextEnabled="false"
                />

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/from_form"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent=".35"
            android:layout_height="wrap_content"
            android:hint="@string/from"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_form">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_txt_from_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textColorHint="#546E7A"
                app:helperTextEnabled="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/to_form"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent=".35"
            android:layout_height="wrap_content"
            android:hint="@string/to"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_form">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_txt_to_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textColorHint="#546E7A"
                app:helperTextEnabled="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/departure_form"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent=".7"
            android:layout_height="wrap_content"
            android:hint="@string/departure"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/from_form"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/departure_form_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#546E7A"
                app:helperTextEnabled="false" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/destination_form"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent=".7"
            android:layout_height="wrap_content"
            android:hint="@string/destination"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/departure_form"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/destination_form_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#546E7A"
                app:helperTextEnabled="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/add_destination_button"
            style="?attr/materialIconButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/return_to_the_previous_screen"
            app:icon="@drawable/baseline_add_34"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/destination_form"
            app:layout_constraintTop_toBottomOf="@+id/departure_form" />

        <View
            android:id="@+id/reference_for_barrier"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/add_destination_button"
            app:layout_constraintTop_toBottomOf="@id/departure_form" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_destinations"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintTop_toBottomOf="@id/destination_form"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/reference_for_barrier"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/description_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="24dp"
            android:hint="@string/description"
            app:layout_constraintBottom_toTopOf="@+id/friends_email_form"
            app:layout_constraintHeight_percent=".23"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recycler_destinations"
            app:layout_constraintWidth_percent=".7">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/description_form_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="5"
                android:gravity="top"
                android:textColorHint="#546E7A"
                app:helperTextEnabled="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/friends_email_form"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent=".7"
            android:layout_height="wrap_content"
            android:hint="@string/add_friends_username"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/description_form"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/friends_email_form_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#546E7A"
                app:helperTextEnabled="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/add_friend_button"
            style="?attr/materialIconButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/return_to_the_previous_screen"
            app:icon="@drawable/baseline_add_24"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toEndOf="@+id/friends_email_form"
            app:layout_constraintTop_toBottomOf="@+id/description_form" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_friends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/friends_email_form"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toStartOf="@id/reference_for_barrier"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>